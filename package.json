{
  "name": "cinematic-css",
  "version": "0.0.1",
  "description": "A modern CSS library for adding cinematic animations",
  "main": "src/index.js",
  "devDependencies": {
    "babel-loader": "^7.1.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "node-sass src/scss/cinematic.scss dist/cinematic.css --output-style=compressed --source-map dist/cinematic.css.map",
    "build:js": "webpack --config webpack.config.prod.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all -p watch:*",
    "watch:css": "node-sass src/scss/cinematic.scss docs/styles/cinematic.css --watch",
    "watch:js": "webpack --config webpack.config.dev.js --watch"
  },
  "author": "Johnny Hu <heyitsjhu@gmail.com>",
  "license": "MIT"
}
